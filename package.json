{
  "name": "@arkerlabs/es-schematics",
  "version": "0.0.0-development",
  "description": "Event sourcing schematics by arkerlabs",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json && cpx 'lib/**/*.json' dist && cpx 'lib/**/files/**/*.*' dist",
    "build:watch": "cpx 'lib/**/*.json' dist && cpx 'lib/**/files/**/*.*' dist && tsc -p tsconfig.json -w",
    "test": "npm run build && jest --config jest.json",
    "test:watch": "npm run build && jest --config jest.json --watch",
    "release:npm": "npm publish --access public",
    "lint": "eslint lib/**/*.ts",
    "prettier:check": "prettier --check 'lib/**/*.{ts,json}'",
    "prettier:fix": "prettier 'lib/**/*.{ts,json}' --write",
    "test:version": "standard-version -h",
    "release": "semantic-release",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "schematics"
  ],
  "author": "Arker Labs",
  "license": "MIT",
  "schematics": "./dist/collection.json",
  "dependencies": {
    "@angular-devkit/core": "^9.0.7",
    "@angular-devkit/schematics": "^9.0.7",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@nestjs/schematics": "^7.0.0",
    "@types/jasmine": "~3.5.0",
    "@types/jest": "25.1.4",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "commitizen": "^4.0.3",
    "conventional-github-releaser": "^3.1.3",
    "cpx": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "2.20.1",
    "git-authors-cli": "^1.0.24",
    "husky": "^4.2.3",
    "jest": "25.1.0",
    "lint-staged": "^10.0.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "release-it": "^13.5.1",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0",
    "semantic-release": "^17.0.4",
    "ts-jest": "25.2.1",
    "typescript": "~3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "lib/**/*.ts": [
      "prettier --write",
      "eslint --fix --ignore-pattern lib/**/files/**/*.*"
    ]
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md"
          ]
        }
      ]
    ]
  },
  "contributors": [
    "Edu Sim√≥n <edu@arkerlabs.com>",
    "Juanjo Chust <nytyr@me.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ArkerLabs/event-sourcing-schematics.git"
  }
}

