{
  "compilerOptions": {
    "baseUrl": "./tsconfig",
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "lib",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "lib/**/*.test.ts", "lib/**/files/**", "**/*.json"]
}
