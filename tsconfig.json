{
  "compilerOptions": {
    "baseUrl": "tsconfig",
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src/",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src/utils", "src/lib", "src/index.ts", "**.json"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/files/**"]
}
